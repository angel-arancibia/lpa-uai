<%= form_for @expedient, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :student_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :student_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :category_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :details, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :details, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :presentation, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :presentation, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "Cancelar", "#", :class => 'btn', "data-dismiss" => "modal" %>
  </div>
<% end %>
