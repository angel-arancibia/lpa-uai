    <![endif]-->

    <%= stylesheet_link_tag "bootstrap.min.css", :media => "all" %>
    
    <%= stylesheet_link_tag "lpa", :media => "all" %>

    <%= javascript_include_tag "bootstrap.min.js" %>

  </head>
    <body>
    <div class="navbar navbar-fixed-top">
      <div class="container">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <a class="navbar-brand" href="#">TP final</a>

        <div id="navbar-main" class="nav-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to 'Inicio', root_path %></li>
            <li><%= link_to 'Expedientes', expedients_path %></li>
            <li><%= link_to 'Movimientos', transactions_path %></li>
          
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  Administracion 
                  <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Usuarios', users_path %></li>
                <li><%= link_to 'Alumnos', students_path %></li>
                <li><%= link_to 'Oficinas', offices_path %></li>
                <li><%= link_to 'Categorias', categories_path %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav pull-right">
            <li><a href="/#about">About</a></li>
            <li><a href="/#contact">Contacto</a></li>
          </ul>
          
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <div class="container">
      <%= render 'layouts/messages' %>
      <%= yield %>
      
      <div class="modal hide fade" id="modal-window">
        <div class="modal-header">
          <a href="#" class="close">Ã—</a>
          <h3>Loading...</h3>
        </div>
        <div class="modal-body center">
        </div>
        <div class="modal-footer">&nbsp;</div>
      </div>
      
    </div>
  </body>
</html>
